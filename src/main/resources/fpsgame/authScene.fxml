<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="600.0" prefWidth="1000.0" styleClass="root" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fpsgame.ui.AuthController">
   <fx:define>
       <ToggleGroup fx:id="authGroup" />
   </fx:define>
    <children>
      <AnchorPane prefHeight="200.0" prefWidth="480.0" styleClass="left-pane">
         <children>
            <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="81.0" spacing="15.0" styleClass="my-vbox" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="81.0">
               <padding>
                  <Insets bottom="40.0" left="40.0" right="40.0" />
               </padding>
               <children>
                  <HBox prefHeight="35.0">
                     <children>
                        <ToggleButton fx:id="btnLogin" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="tab-button" text="Login" HBox.hgrow="ALWAYS">
                           <toggleGroup>
                              <ToggleGroup fx:id="authGroup" />
                           </toggleGroup></ToggleButton>
                        <ToggleButton fx:id="btnRegister" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" styleClass="tab-button" text="Register" toggleGroup="$authGroup" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-title" text="LET'S GO, SOLDIER!">
                     <font>
                        <Font size="30.0" />
                     </font></Label>
                  <StackPane>
                     <children>

                         <!-- ResgisForm -->
                         <VBox fx:id="registerForm" alignment="CENTER" managed="false" spacing="12.0" visible="false" StackPane.alignment="CENTER">
                             <children>
                                 <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="Username" />
                                 <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="Password" />
                                 <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="Email" />
                                 <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="ConfirmPassword" />
                                 <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onRegisterSubmit" styleClass="button-login" text="Register" />
                                 <Label fx:id="lblRegisterError" maxWidth="1.7976931348623157E308" text="" textFill="red" wrapText="true" />
                             </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <StackPane.margin>
                              <Insets />
                           </StackPane.margin>
                         </VBox>
                        <VBox fx:id="loginForm" alignment="CENTER" spacing="12.0" StackPane.alignment="CENTER">
                           <children>
                              <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="Username">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin></TextField>
                              <TextField maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="33.0" prefWidth="320.0" promptText="Password" />
                              <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onLoginSubmit" styleClass="button-login" text="Login" />
                              <Label fx:id="lblLoginError" maxWidth="1.7976931348623157E308" text="" textFill="red" wrapText="true" />
                           </children>
                           <StackPane.margin>
                              <Insets />
                           </StackPane.margin>
                        </VBox>
                     </children>
                  </StackPane>
               </children>
            </VBox>
         </children></AnchorPane>
      <StackPane prefHeight="150.0" prefWidth="200.0" styleClass="right-pane" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fitHeight="600.0" fitWidth="520.0" pickOnBounds="true">
               <image>
                  <Image url="@../image/background.png" />
               </image></ImageView>
         </children>
      </StackPane>
   </children>
</HBox>
